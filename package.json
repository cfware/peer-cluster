{
	"name": "@cfware/peer-cluster",
	"version": "0.1.1",
	"description": "Websocket all-to-all connectivity cluster",
	"main": "cjs/peer-cluster.js",
	"scripts": {
		"prepack": "babel lib/ -d cjs/",
		"release": "standard-version --sign",
		"test": "xo && cross-env NODE_ENV=test nyc ava"
	},
	"engines": {
		"node": ">=8"
	},
	"author": "Corey Farrell",
	"license": "MIT",
	"files": [
		"cjs/*.js"
	],
	"keywords": [],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/cfware/peer-cluster.git"
	},
	"bugs": {
		"url": "https://github.com/cfware/peer-cluster/issues"
	},
	"homepage": "https://github.com/cfware/peer-cluster#readme",
	"dependencies": {
		"ws": "^6.2.1"
	},
	"devDependencies": {
		"@babel/cli": "^7.2.3",
		"@babel/core": "^7.4.0",
		"@babel/plugin-proposal-class-properties": "^7.4.0",
		"@babel/plugin-transform-modules-commonjs": "^7.4.0",
		"@babel/register": "^7.4.0",
		"ava": "^1.4.1",
		"babel-eslint": "^10.0.1",
		"babel-plugin-istanbul": "^5.1.1",
		"cross-env": "^5.2.0",
		"delay": "^4.1.0",
		"nyc": "^13.3.0",
		"p-event": "^4.0.0",
		"standard-version": "^5.0.2",
		"xo": "^0.24.0"
	},
	"nyc": {
		"all": true,
		"check-coverage": true,
		"per-file": true,
		"lines": 100,
		"statements": 100,
		"functions": 100,
		"branches": 100,
		"instrument": false,
		"sourceMap": false,
		"require": [
			"@babel/register"
		],
		"include": [
			"lib/*.js"
		]
	},
	"xo": {
		"parser": "babel-eslint",
		"env": {
			"es6": true
		},
		"rules": {
			"lines-between-class-members": [
				"error",
				"always",
				{
					"exceptAfterSingleLine": true
				}
			]
		}
	}
}
